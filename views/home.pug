<!DOCTYPE html>
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        meta(name="theme-color" content="#2d4161")
        link(rel="icon" sizes="192x192" href="./img/icon-launcher-4x.png")
        link(rel="alternate" type="text/turtle" href="./data/foaf.ttl" title=__("foaf.title"))
        
        title= __('home_title')

        // Web app
        link(rel="manifest", href="./manifest.json")

        // Link styles in CSS public/css/*.css
        link(rel="stylesheet", href="./css/main.css")
    body
        ul.navigation#top(role="navigation")
            li
                a.tag= __("nav.name")
            li
                a(href="#me")= __("nav.about_me")
            li
                a(href="#contact")= __("nav.contact")
            li
                a(href="#skills")= __("nav.skills")
            li
                a(href="#work")= __("nav.work")
            li
                a(href="#education")= __("nav.education")
            li
                a(href="#research")= __("nav.research")
        .main
            a.floating-button(href="#top")
            aside
                .profile#me
                    img.clip(src="./img/profile.jpg", alt="Profile photo")
                    .title
                        h1= __("profile.name")
                        h2= __("profile.job")
                .aboutme
                    icon.user
                    h1= __("about.title")
                    p= __("about.p1")
                    p= __("about.p2")
                    p= __("about.p3")
                .contact#contact
                    icon.email
                    h1= __("contact.title")
                    p
                        icon.mobile
                        = __("contact.phone_number")
                    p
                        icon.globe
                        = __("contact.email")
                    p
                        icon.location
                        = __("contact.address")
                .skills#skills
                    icon.skill
                    h1= __("skills.title")
                    .group
                        .title= __("skills.sk1.title")
                        .progress-bar(class="bar-" + __("skills.sk1.bar"))
                    .group
                        .title= __("skills.sk2.title")
                        .progress-bar(class="bar-" + __("skills.sk2.bar"))
                    .group
                        .title= __("skills.sk3.title")
                        .progress-bar(class="bar-" + __("skills.sk3.bar"))
                    .group
                        .title= __("skills.sk4.title")
                        .progress-bar(class="bar-" + __("skills.sk4.bar"))
                    .group
                        .title= __("skills.sk5.title")
                        .progress-bar(class="bar-" + __("skills.sk5.bar"))
            section
                .work-exp#work
                    icon.work
                    h1= __("work.title")
                    .group
                        icon.bubble
                        .date= __("work.last.date")
                        .title
                            = __("work.last.title")
                            .subtitle= __("work.last.subtitle")
                            p.description= __("work.last.description")
                    .group
                        icon.bubble
                        .date= __("work.w2.date")
                        .title
                            = __("work.w2.title")
                            .subtitle= __("work.w2.subtitle")
                            p.description= __("work.w2.description")
                    .group
                        icon.bubble
                        .date= __("work.w1.date")
                        .title
                            = __("work.w1.title")
                            .subtitle= __("work.w1.subtitle")
                            p.description= __("work.w1.description")
                    .group
                        icon.bubble-terminal
                        .date= __("work.first.date")
                .education#education
                    icon.studies
                    h1= __("studies.title")
                    .group
                        icon.bubble
                        .date= __("studies.last.date")
                        .title
                            = __("studies.last.title")
                            .subtitle= __("studies.last.subtitle")
                    .group
                        icon.bubble
                        .date= __("studies.s2.date")
                        .title
                            = __("studies.s2.title")
                            .subtitle= __("studies.s2.subtitle")
                    .group
                        icon.bubble
                        .date= __("studies.s1.date")
                        .title
                            = __("studies.s1.title")
                            .subtitle= __("studies.s1.subtitle")
                    .group
                        icon.bubble-terminal
                        .date= __("studies.s0.date")
                .research#research
                    icon.paper
                    h1= __("research.title")
                    .group
                        icon.bubble
                        .date= __("research.last.date")
                        .title
                            = __("research.last.title")
                            .subtitle= __("research.last.subtitle")
                            p.description= __("research.last.description")
                    .group
                        icon.bubble
                        .date= __("research.r4.date")
                        .title
                            = __("research.r4.title")
                            .subtitle= __("research.r4.subtitle")
                            p.description= __("research.r4.description")
                    .group
                        icon.bubble
                        .date= __("research.r3.date")
                        .title
                            = __("research.r3.title")
                            .subtitle= __("research.r3.subtitle")
                            p.description= __("research.r3.description")
                    .group
                        icon.bubble
                        .date= __("research.r2.date")
                        .title
                            = __("research.r2.title")
                            .subtitle= __("research.r2.subtitle")
                            p.description= __("research.r2.description")
                    .group
                        icon.bubble
                        .date= __("research.r1.date")
                        .title
                            = __("research.r1.title")
                            .subtitle= __("research.r1.subtitle")
                            p.description= __("research.r1.description")
                    .group
                        icon.bubble-terminal


